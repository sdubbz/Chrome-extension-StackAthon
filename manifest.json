

{
  "name": "STK",
  "description": "Swiss Tech Knife",
  "version": "1.0",
  "manifest_version": 3,
   "background": {
    "service_worker": "background.js"
   },
  "permissions": ["storage", "activeTab", "scripting", "alarms", "tabs", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
            "16": "/images/SAK16.png",
            "32": "/images/SAK32.png",
            "48": "/images/SAK48.png",
            "128": "/images/SAK128.png"
          }
    },

  "icons":{
        "16": "/images/SAK16.png",
        "32": "/images/SAK32.png",
        "48": "/images/SAK48.png",
        "128": "/images/SAK128.png"
      }


}
